<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_alignLeft="@id/green"
        android:id="@+id/red1"
        android:background="#FF0000"
        android:layout_above="@id/green"
        android:textSize="30sp"
        android:text="red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/green"
        android:layout_above="@id/blue1"
        android:background="#00FF0A"
        android:layout_alignLeft="@id/blue1"
        android:textSize="30sp"
        android:text="green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/blue1"
        android:background="#2196F3"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text="blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/organ1"
        android:layout_below="@id/blue1"
        android:background="#FFE500"
        android:layout_alignLeft="@id/blue1"
        android:textSize="30sp"
        android:text="green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gray1"
        android:layout_below="@id/organ1"
        android:background="#CCBBB4"
        android:layout_alignLeft="@id/blue1"
        android:textSize="30sp"
        android:text="gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pink1"
        android:layout_below="@id/gray1"
        android:background="#F4709D"
        android:layout_alignLeft="@id/blue1"
        android:textSize="30sp"
        android:text="pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>
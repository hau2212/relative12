        android:layout_toLeftOf="@id/view4"
        android:background="#5C9E13"
        android:textSize="35sp"
        android:text="view 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/view6"
        android:layout_below="@id/view5"
        android:layout_toLeftOf="@id/view5"
        android:background="#F44336"
        android:textSize="35sp"
        android:text="view 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/view7"
        android:layout_below="@id/view6"
        android:layout_toLeftOf="@id/view6"
        android:background="#6BC600"
        android:textSize="35sp"
        android:text="view 7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
        android:layout_toRightOf="@id/view1"
        android:background="#5C00FF"
        android:textSize="35sp"
        android:text="view 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/view3"
